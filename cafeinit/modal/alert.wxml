<template name="ci-modal">
  <view class="ci-modal ci-modal-alert{{className ? (' ' + className) : ''}}"
    data-cid="{{cid}}">
    <view class="ci-modal-dialog" data-cid="{{cid}}">
      <view class="ci-modal-header" wx:if="{{title}}">{{title}}</view>
      <view class="ci-modal-body">{{content}}</view>
      <view class="ci-modal-footer">
        <button class="ci-modal-btn'" bindtap="_ciAlertButtonOnTap">
          {{okText}}
        </button>
      </view>
    </view>
    <view class="ci-dimmer" bindtap="_ciAlertDimmerOnTap"></view>
  </view>
</template>
